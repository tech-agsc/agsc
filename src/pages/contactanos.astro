---
import Layout from "../layouts/Layout.astro";

const officeAddress = "Calle 22A #48-38, Bogota, Colombia";
const officeAddressQuery = encodeURIComponent(officeAddress);
const mapsEmbedUrl = `https://www.google.com/maps?q=${officeAddressQuery}&output=embed`;
const mapsDirectionsUrl = `https://www.google.com/maps/search/?api=1&query=${officeAddressQuery}`;
---

<Layout title="Contáctanos" description="Contáctanos para recibir asesoría contable, tributaria y financiera personalizada. AG Soluciones Contables en Colombia.">
  <!-- Hero -->
  <section class="relative overflow-hidden bg-secondary py-20 md:py-28">
    <div class="max-w-6xl mx-auto px-4 text-center relative z-10">
      <span class="inline-block text-xs font-semibold uppercase tracking-widest text-primary bg-primary/10 px-3 py-1 rounded-full mb-6">
        Contáctanos
      </span>
      <h1 class="text-4xl md:text-5xl font-extrabold text-white leading-tight mb-6 max-w-3xl mx-auto">
        Hablemos de tu
        <span class="text-primary">crecimiento financiero</span>
      </h1>
      <p class="text-lg text-white/60 max-w-2xl mx-auto">
        Encuéntranos en nuestra oficina y conversemos sobre la mejor ruta
        contable, tributaria y financiera para tu negocio.
      </p>
    </div>
    <div class="absolute -top-20 -right-20 w-96 h-96 bg-primary/5 rounded-full blur-3xl pointer-events-none" aria-hidden="true"></div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">
        <!-- Office Map -->
        <div class="lg:col-span-3">
          <h2 class="text-2xl font-bold text-secondary mb-6">
            Visítanos en la oficina
          </h2>
          <p class="text-muted mb-6">
            Esta es la ubicación de nuestra oficina. También puedes abrir la ruta
            directamente desde Google Maps.
          </p>
          <div class="rounded-xl overflow-hidden border border-border bg-white">
            <iframe
              src={mapsEmbedUrl}
              title="Ubicación de la oficina en Google Maps"
              class="w-full h-[420px]"
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              allowfullscreen
            ></iframe>
          </div>
          <div class="mt-5 p-5 rounded-xl bg-white border border-border">
            <p class="text-sm font-semibold text-secondary mb-1">Dirección de la oficina</p>
            <p class="text-sm text-muted">{officeAddress}</p>
            <a
              href={mapsDirectionsUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex mt-4 bg-primary text-secondary font-semibold px-5 py-2.5 rounded-full hover:bg-primary-dark transition-colors"
            >
              Ver ruta en Google Maps
            </a>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="lg:col-span-2">
          <h2 class="text-2xl font-bold text-secondary mb-6">
            Información de contacto
          </h2>

          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-start gap-4 p-5 rounded-xl bg-white border border-border">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-secondary mb-1">Correo electrónico</h3>
                <a href="mailto:contacto@agsolucionescontables.com" class="text-sm text-muted hover:text-primary transition-colors">
                  contacto@agsolucionescontables.com
                </a>
              </div>
            </div>

            <!-- Phone -->
            <div class="flex items-start gap-4 p-5 rounded-xl bg-white border border-border">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-secondary mb-1">Teléfono</h3>
                <a href="tel:+573202386336" class="text-sm text-muted hover:text-primary transition-colors">
                  +57 320 238 6336
                </a>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="flex items-start gap-4 p-5 rounded-xl bg-white border border-border">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-secondary mb-1">WhatsApp</h3>
                <a
                  href="https://wa.me/573202386336?text=Hola%20AG%20Soluciones%20Contables%2C%20deseo%20agendar%20una%20asesoria."
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-sm text-muted hover:text-primary transition-colors"
                >
                  Escríbenos por WhatsApp
                </a>
              </div>
            </div>

            <!-- Social -->
            <div class="flex items-start gap-4 p-5 rounded-xl bg-white border border-border">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                </svg>
              </div>
              <div>
                <h3 class="text-sm font-semibold text-secondary mb-1">Redes Sociales</h3>
                <div class="flex gap-3 mt-1">
                  <a
                    href="https://www.facebook.com"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-muted hover:text-primary transition-colors"
                    aria-label="Facebook"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                    </svg>
                  </a>
                  <a
                    href="https://www.instagram.com/ag_soluciones_contables"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-muted hover:text-primary transition-colors"
                    aria-label="Instagram"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
