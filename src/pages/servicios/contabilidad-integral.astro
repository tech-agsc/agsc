---
import Layout from "../../layouts/Layout.astro";
import { WHATSAPP_URL } from "../../utils/whatsapp";

const otherServices = [
  { href: "/servicios/tributacion-y-cumplimiento/", label: "Tributación y Cumplimiento" },
  { href: "/servicios/revisoria-fiscal-y-auditoria/", label: "Revisoría Fiscal y Auditoría" },
  { href: "/servicios/servicios-complementarios/", label: "Servicios Complementarios" },
];
---

<Layout title="Contabilidad Integral" description="Soluciones contables integrales para empresas de todos los sectores. Nómina, facturación electrónica, gestión financiera y cumplimiento DIAN.">
  <!-- Hero -->
  <section class="relative overflow-hidden bg-secondary py-20 md:py-28">
    <div class="max-w-6xl mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <a href="/" class="inline-flex items-center gap-1 text-xs text-white/40 hover:text-primary transition-colors mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
            Inicio
          </a>
          <span class="inline-block text-xs font-semibold uppercase tracking-widest text-primary bg-primary/10 px-3 py-1 rounded-full mb-6">
            Servicios
          </span>
          <h1 class="text-4xl md:text-5xl font-extrabold text-white leading-tight mb-6">
            Contabilidad
            <span class="text-primary">Integral</span>
          </h1>
          <p class="text-lg text-white/60 max-w-xl">
            Soluciones contables, tributarias y financieras diseñadas para
            fortalecer la gestión empresarial y garantizar el cumplimiento
            normativo con precisión técnica, visión estratégica y acompañamiento
            continuo.
          </p>
        </div>
        <div class="hidden lg:block">
          <div class="rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
            <!-- PLACEHOLDER: Reemplazar con foto de oficina contable o equipo trabajando -->
            <img
              src="https://images.unsplash.com/photo-1554224154-26032ffc0d07?w=600&h=420&fit=crop"
              alt="Contabilidad integral profesional"
              class="w-full h-[420px] object-cover"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="absolute -top-20 -right-20 w-96 h-96 bg-primary/5 rounded-full blur-3xl pointer-events-none" aria-hidden="true"></div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center max-w-2xl mx-auto mb-14">
        <span class="text-xs font-semibold uppercase tracking-widest text-primary">Soluciones Integrales</span>
        <h2 class="text-3xl md:text-4xl font-bold text-secondary mt-2 mb-4">
          Para el crecimiento empresarial
        </h2>
        <p class="text-muted">
          Combinamos precisión técnica con visión estratégica para acompañar
          empresas, emprendedores y organizaciones de diversos sectores económicos.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- 1. Contabilidad Integral -->
        <div class="group p-7 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-secondary mb-3 group-hover:text-primary transition-colors">
            Contabilidad Integral
          </h3>
          <ul class="space-y-2 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Registros contables precisos y oportunos
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Preparación confiable de estados financieros
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Informes gerenciales para la toma de decisiones
            </li>
          </ul>
        </div>

        <!-- 2. Propiedad Horizontal -->
        <div class="group p-7 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-secondary mb-3 group-hover:text-primary transition-colors">
            Propiedad Horizontal
          </h3>
          <ul class="space-y-2 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Contabilidad transparente para conjuntos y edificios
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Estados financieros e informes de asamblea
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Acompañamiento en auditorías y revisoría
            </li>
          </ul>
        </div>

        <!-- 3. Especialización Sectorial -->
        <div class="group p-7 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-secondary mb-3 group-hover:text-primary transition-colors">
            Especialización Sectorial
          </h3>
          <ul class="space-y-2 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Servicios, turismo, hotelería y gastronomía
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Industria, manufactura y construcción
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Sector salud (clínicas, hospitales, IPS)
            </li>
          </ul>
        </div>

        <!-- 4. Consultoría Empresarial -->
        <div class="group p-7 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-secondary mb-3 group-hover:text-primary transition-colors">
            Consultoría Empresarial
          </h3>
          <ul class="space-y-2 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Diagnóstico contable y tributario
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Implementación de buenas prácticas administrativas
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Capacitación de personal y apoyo directivo
            </li>
          </ul>
        </div>

        <!-- 5. Nómina y Facturación Electrónica -->
        <div class="group p-7 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-secondary mb-3 group-hover:text-primary transition-colors">
            Nómina y Facturación Electrónica
          </h3>
          <ul class="space-y-2 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Implementación de nómina electrónica ante la DIAN
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Facturación electrónica para obligados
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              100% cumplimiento DIAN
            </li>
          </ul>
        </div>

        <!-- 6. Consultoría Financiera Estratégica -->
        <div class="group p-7 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-secondary mb-3 group-hover:text-primary transition-colors">
            Consultoría Financiera Estratégica
          </h3>
          <ul class="space-y-2 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Proyecciones de flujo de caja y presupuestos
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Análisis de costos, rentabilidad y punto de equilibrio
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Reestructuración financiera para optimización de resultados
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Banner -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0">
      <!-- PLACEHOLDER: Reemplazar con foto de gestión financiera o equipo trabajando con documentos -->
      <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1200&h=400&fit=crop" alt="" class="w-full h-full object-cover" loading="lazy" />
      <div class="absolute inset-0 bg-secondary/85"></div>
    </div>
    <div class="relative max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Gestión financiera con sistemas de costos, presupuestos y control de inventarios por sector
      </h2>
      <p class="text-white/60 max-w-2xl mx-auto">
        Adaptamos nuestras soluciones a las particularidades de cada industria
        para maximizar la eficiencia y el cumplimiento normativo de tu empresa.
      </p>
    </div>
  </section>

  <!-- Other Services -->
  <section class="py-16 md:py-20 bg-surface">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Otros servicios</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {otherServices.map((s) => (
          <a href={s.href} class="group p-6 rounded-2xl bg-white border border-border hover:border-primary hover:shadow-lg transition-all text-center">
            <h3 class="text-lg font-bold text-secondary group-hover:text-primary transition-colors">{s.label}</h3>
            <span class="inline-flex items-center gap-1 text-sm text-primary mt-2">
              Ver más
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="relative py-20 md:py-28 overflow-hidden">
    <div class="absolute inset-0">
      <img src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=1200&h=500&fit=crop" alt="" class="w-full h-full object-cover" loading="lazy" />
      <div class="absolute inset-0 bg-secondary/90"></div>
    </div>
    <div class="relative max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Comienza tu crecimiento financiero
      </h2>
      <p class="text-white/60 mb-8">¡Hablemos de tu negocio!</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contactanos/" class="inline-block bg-primary text-secondary font-semibold px-8 py-3.5 rounded-full hover:bg-primary-dark transition-colors shadow-lg">Contáctanos</a>
        <a href={WHATSAPP_URL} class="inline-flex items-center gap-2 border-2 border-white/30 text-white font-semibold px-8 py-3.5 rounded-full hover:bg-white/10 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          WhatsApp
        </a>
      </div>
    </div>
  </section>
</Layout>
