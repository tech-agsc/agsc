---
import Layout from "../../layouts/Layout.astro";
import { WHATSAPP_URL } from "../../utils/whatsapp";

const otherServices = [
  { href: "/servicios/contabilidad-integral/", label: "Contabilidad Integral" },
  { href: "/servicios/tributacion-y-cumplimiento/", label: "Tributación y Cumplimiento" },
  { href: "/servicios/servicios-complementarios/", label: "Servicios Complementarios" },
];
---

<Layout title="Revisoría Fiscal y Auditoría" description="Revisoría fiscal, auditoría independiente, procesos de insolvencia, creación y liquidación de empresas, y servicios para personas naturales.">
  <!-- Hero -->
  <section class="relative overflow-hidden bg-secondary py-20 md:py-28">
    <div class="max-w-6xl mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <a href="/" class="inline-flex items-center gap-1 text-xs text-white/40 hover:text-primary transition-colors mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
            Inicio
          </a>
          <span class="inline-block text-xs font-semibold uppercase tracking-widest text-primary bg-primary/10 px-3 py-1 rounded-full mb-6">
            Servicios
          </span>
          <h1 class="text-4xl md:text-5xl font-extrabold text-white leading-tight mb-6">
            Revisoría Fiscal y
            <span class="text-primary">Auditoría</span>
          </h1>
          <p class="text-lg text-white/60 max-w-xl">
            Control, protección y acompañamiento empresarial. Brindamos soporte
            profesional en revisoría fiscal, procesos de insolvencia, creación
            y liquidación de empresas, y asesoría especializada para personas
            naturales con rigor técnico, independencia y total confianza.
          </p>
        </div>
        <div class="hidden lg:block">
          <div class="rounded-2xl overflow-hidden border border-white/10 shadow-2xl">
            <!-- PLACEHOLDER: Reemplazar con foto de auditoría o revisión de documentos -->
            <img
              src="https://images.unsplash.com/photo-1507679799987-c73779587ccf?w=600&h=420&fit=crop"
              alt="Revisoría fiscal y auditoría profesional"
              class="w-full h-[420px] object-cover"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="absolute -top-20 -right-20 w-96 h-96 bg-primary/5 rounded-full blur-3xl pointer-events-none" aria-hidden="true"></div>
  </section>

  <!-- Main Services -->
  <section class="py-16 md:py-24 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center max-w-2xl mx-auto mb-14">
        <span class="text-xs font-semibold uppercase tracking-widest text-primary">Control y Protección</span>
        <h2 class="text-3xl md:text-4xl font-bold text-secondary mt-2 mb-4">
          Acompañamiento empresarial integral
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- 1. Revisoría Fiscal y Auditoría -->
        <div class="p-8 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-secondary mb-4">
            Revisoría Fiscal y Auditoría
          </h3>
          <ul class="space-y-3 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Dictámenes y certificaciones profesionales
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Evaluación de control interno y cumplimiento normativo
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Informes independientes para socios y entes de control
            </li>
          </ul>
        </div>

        <!-- 2. Procesos de Insolvencia -->
        <div class="p-8 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-secondary mb-4">
            Procesos de Insolvencia Empresarial
          </h3>
          <ul class="space-y-3 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Acompañamiento contable en reorganización (Ley 1116)
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Preparación de inventario de pasivos
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Determinación de derechos de voto
            </li>
          </ul>
        </div>

        <!-- 3. Creación, Disolución y Liquidación -->
        <div class="p-8 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-secondary mb-4">
            Creación, Disolución y Liquidación de Empresas
          </h3>
          <ul class="space-y-3 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Asesoría en constitución y registro ante Cámara de Comercio
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Elaboración de estatutos y composición societaria
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Trámites ante la DIAN
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Disolución y liquidación con acompañamiento jurídico-contable
            </li>
          </ul>
        </div>

        <!-- 4. Personas Naturales -->
        <div class="p-8 rounded-2xl bg-surface border border-border hover:border-primary hover:shadow-lg transition-all">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-5">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-secondary mb-4">
            Personas Naturales
          </h3>
          <ul class="space-y-3 text-sm text-muted">
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Declaraciones de renta de personas naturales
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Declaraciones de activos en el exterior
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Contabilización de rentas laborales, de capital y no laborales
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-4 h-4 text-primary mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              Tramitación de sucesiones y planeación patrimonial personalizada
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Services -->
  <section class="py-16 md:py-20 bg-surface">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-secondary mb-8 text-center">Otros servicios</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {otherServices.map((s) => (
          <a href={s.href} class="group p-6 rounded-2xl bg-white border border-border hover:border-primary hover:shadow-lg transition-all text-center">
            <h3 class="text-lg font-bold text-secondary group-hover:text-primary transition-colors">{s.label}</h3>
            <span class="inline-flex items-center gap-1 text-sm text-primary mt-2">
              Ver más
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="relative py-20 md:py-28 overflow-hidden">
    <div class="absolute inset-0">
      <img src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=1200&h=500&fit=crop" alt="" class="w-full h-full object-cover" loading="lazy" />
      <div class="absolute inset-0 bg-secondary/90"></div>
    </div>
    <div class="relative max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Comienza tu crecimiento financiero</h2>
      <p class="text-white/60 mb-8">¡Hablemos de tu negocio!</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contactanos/" class="inline-block bg-primary text-secondary font-semibold px-8 py-3.5 rounded-full hover:bg-primary-dark transition-colors shadow-lg">Contáctanos</a>
        <a href={WHATSAPP_URL} class="inline-flex items-center gap-2 border-2 border-white/30 text-white font-semibold px-8 py-3.5 rounded-full hover:bg-white/10 transition-colors">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          WhatsApp
        </a>
      </div>
    </div>
  </section>
</Layout>
