---
interface Props {
  class?: string;
  dark?: boolean;
}

const { class: className = "", dark = false } = Astro.props;
---

<a href="/" class:list={["inline-flex items-center", className]} aria-label="AG Soluciones Contables">
  <img
    src="/images/brand/logo-agsc.png"
    alt="AG Soluciones Contables"
    width="476"
    height="170"
    class:list={["w-auto h-10 md:h-11", dark ? "drop-shadow-[0_1px_2px_rgba(0,0,0,.45)]" : ""]}
    decoding="async"
    loading="eager"
  />
</a>
