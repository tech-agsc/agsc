---
interface Props {
  class?: string;
  dark?: boolean;
}

const { class: className = "", dark = false } = Astro.props;
---

<a href="/" class:list={["flex items-center gap-2", className]}>
  <svg
    width="40"
    height="40"
    viewBox="0 0 40 40"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
  >
    <defs>
      <linearGradient id="logo-gold-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="#DDA23C" />
        <stop offset="57.66%" stop-color="#C27A18" />
        <stop offset="100%" stop-color="#FEF3A4" />
      </linearGradient>
    </defs>
    <rect width="40" height="40" rx="8" fill="#050507" />
    <text
      x="50%"
      y="54%"
      dominant-baseline="middle"
      text-anchor="middle"
      fill="url(#logo-gold-gradient)"
      font-weight="700"
      font-size="18"
      font-family="Inter, sans-serif"
    >
      AG
    </text>
  </svg>
  <span class:list={["text-lg font-bold leading-tight", dark ? "text-white" : "text-secondary"]}>
    AG Soluciones<br />
    <span class="text-sm font-medium gold-gradient-text">Contables</span>
  </span>
</a>
